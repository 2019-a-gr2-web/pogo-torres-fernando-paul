    <title>Estilos</title>
    <style>
        /*.css*/
        /*Selector {proiedad: valor;}*/
        h1 {
            color: red;
            background: black;
        }

        /*Selector -> etiqueta*/
        p, h2, div {
            color: green;
            background: pink;
        }

        /*Selector -> ID*/
        #adios {
            color: #ffa31a;
            background: brown;
        }

        /*Selector -> Clase*/
        .verde {
            color: blue;
            background: gray;
        }
        .azul{
            color: green;
            border-color: red;
        }
        .morado{
            color:red;
            background: blue;
        }
        p.verde{
            color: orange;
        }
        p.verde.azul{
            color: orange;
            background: green;
        }
    </style>
</head>
